â”œâ”€â”€ scripts/
â”‚   â””â”€â”€ main.js
fetch("pokedex/albanix.json")
  .then(response => {
    if (!response.ok) throw new Error("No se pudo cargar el archivo JSON");
    return response.json();
  })
  .then(pokemon => {
    const contenedor = document.getElementById("contenido");
    contenedor.innerHTML = `
      <h2>${pokemon.nombre} (#${pokemon.id})</h2>
      <p><strong>Tipo:</strong> ${pokemon.tipo.join(" / ")}</p>
      <p><strong>DescripciÃ³n:</strong> ${pokemon.descripcion}</p>
      <p><strong>Altura:</strong> ${pokemon.altura}</p>
      <p><strong>Peso:</strong> ${pokemon.peso}</p>
      <p><strong>HÃ¡bitat:</strong> ${pokemon.habitat}</p>
      <p><strong>Habilidades:</strong> ${pokemon.habilidades.join(", ")}</p>
      <img src="${pokemon.imagen}" alt="${pokemon.nombre}" width="200" />
    `;
  })
  .catch(error => {
    document.getElementById("contenido").innerText = "Error al cargar los datos del PokÃ©mon.";
    console.error(error);
  });

